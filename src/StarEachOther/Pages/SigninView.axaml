<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StarEachOther.Pages"
			 xmlns:semi="https://irihi.tech/semi"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StarEachOther.Pages.SigninView"
			 x:DataType="local:SigninViewModel"
			 HorizontalAlignment="Center"
			 VerticalAlignment="Center">
	<StackPanel>
		<TextBlock HorizontalAlignment="Center" Text="{Binding Message}"/>
		<Button Classes="Success Large" Margin="0 6 0 0" Theme="{DynamicResource SolidButton}" Command="{Binding AuthCommand}" HorizontalAlignment="Center">登录您的Github账号</Button>
	</StackPanel>
</UserControl>
